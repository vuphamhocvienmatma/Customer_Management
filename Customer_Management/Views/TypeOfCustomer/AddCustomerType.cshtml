    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCustomerType</title>
</head>
<body>
    @using (Html.BeginForm("AddCustomerType", "TypeOfCustomer", FormMethod.Post, new
